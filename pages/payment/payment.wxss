/* pages/payment/payment.wxss */
page {
  background: #fff;
}
.user-address-detail {
  height: 120rpx;
  box-sizing: border-box;
}
.not-found-address {
  height: 100%;
  font-size: 30rpx;
  text-align: center;
  line-height: 120rpx;
}
.user-recive-address {
  width: 48rpx;
  height: 48rpx;
  display: inline-block;
  margin-top: 10rpx;
  margin-bottom: -6rpx;
}

.add-person-address {
  color: red;
  margin-left: 20rpx;
}
.your-address {
  height: 100%;
  font-size: 30rpx;
}
.user-name-phoneNum {
  font-size: 28rpx;
}
.my-address-icon {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  margin-bottom: -10rpx;
}
.user-name-text {
  margin-right: 20rpx;
}
.user-phoneNum-text {
  margin-left: 20rpx;
}
.user-address-text {
  width: 650rpx;
  font-size: 28rpx;
  color: #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 订单详情列表  */
.goods-info-list {
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
}
.goods-count {
  margin-top: 10rpx;
}
.add-to-cart {
  width: 64rpx;
  height: 64rpx;
}
.detail-navigator {
  height: 100%;
  width: 100%;
}
.business-price-number {
  margin-top: 60rpx;
}
.business-price-icon{
  font-size: 28rpx;
  color: red;
}
.business-price-text {
  color:  red;
  font-size: 36rpx;
}
.business-numbers-text {
  font-size: 26rpx;
  color: #8a8a8a;
}
/* end  */

/* 页脚  */
.page-footer {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #ccc;
  box-sizing: border-box;
  background: #fff;
  overflow: hidden;
  z-index: 999;
}
.page-footer-box {
  height: 100%;
  float: left;
}
.payment-info-text {
  width: 75%;
  text-align: right;
}
.payment-info-style {
  height: 50%;
  line-height: 60rpx;
  padding-right: 20rpx;
  font-size: 26rpx;
}
.total-money text, .payment-freight text{
  color:  red;
}
.submit-btn {
  width: 25%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  background: red;
}
/* end  */