/* pages/list/list.wxss */
page, .business-list {
  height: 100%;
  overflow: hidden;
}
/* 左侧商品菜单列表  */
.categroy-left {
  height: 100%;
  width: 24%;
  border-right: 1px solid #ccc;
  box-sizing: border-box;
  float: left;
}
.cate-list {
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-left: 3px solid #fff;
}
.categroy-left .cate-list.on{
    color: #AB956D;
    border-color: #AB956D;
}
/* end  */

/* 右侧分类商品详情  */
.categroy-right {
  height: 100%;
  width: 76%;
  float: right;
  overflow-y: scroll;
}
.detail-navigator {
  height: 100%;
  width: 100%;
}
.business-pic-list {
  height: 180rpx;
  width: 180rpx;
}
.business-desc-list {
  width: 330rpx;
  height: 180rpx;
  right: 20rpx;
}
.business-price {
  font-size: 32rpx;
}
.add-to-cart {
  width: 64rpx;
  height: 64rpx;
}
/* end  */