/* pages/cart/cart.wxss */

/* 购物车为空样式 */
.add-address {
  width: 400rpx;
  height: 300rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  font-size: 32rpx;
}
.add-address image {
  width: 300rpx;
  height: 108rpx;
}
.no-collection {
  color: #ccc;
}
.go-to-add-adderss {
  color: red;
}
/* end  */

/* 购物车清单列表  */
.cart-list-box {
  height: 100%;
  margin-bottom: 10rpx;
}

.cart-goods-list {
  width: 100%;
  height: 200rpx;
  position: relative;
  border-bottom: 2px solid #ccc;
}
.goods-images-box {
  width: 200rpx;
  height: 200rpx;
  box-sizing: border-box;
  position: absolute;
  left: 110rpx;
  padding: 10rpx;
}
.goods-images-box image {
  width: 180rpx;
  height: 180rpx;
}
.goods-checkbox-group {
  margin-top: 50rpx;
}
.goods-detail-box {
  width: 400rpx;
  height: 100%;
  position: absolute;
  right: 0;
}
.goods-name-text {
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  width:100%;
  height:60rpx;
  line-height:60rpx;
}
.goods-price-number {
  height: 140rpx;
  position: relative;
}
.goods-price-style {
  width: 100rpx;
  height: 50rpx;
  color: red;
  font-size: 24rpx;
  position: absolute;
  top: 60rpx;
  left: 20rpx;
}
.goods-number-style {
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #ccc;
  box-sizing: border-box;
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
}
.goods-price-style text {
  font-size: 30rpx;
}
.reduce-goods-num {
  width: 60rpx;
  height: 100%;
  display: inline-block;
  line-height: 80rpx;
  text-align: center;
}
.now-goods-num {
  width: 80rpx;
  height: 100%;
  display: inline-block;
  line-height: 80rpx;
  text-align: center;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  box-sizing: border-box;
  font-size: 32rpx;
}
.add-goods-num {
  width: 60rpx;
  height: 100%;
  display: inline-block;
  line-height: 80rpx;
  text-align: center;
}

/* checkbox-group下的商品信息列表  */
  .goods-list-box {
    height: 200rpx;
  }

  .goods-desc-box {
    width: 400rpx;
    height: 200rpx;
    border: 1px solid red;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
  }
.goods-images-box {
  width: 200rpx;
  height: 200rpx;
  box-sizing: border-box;
  position: absolute;
  left: 110rpx;
  top: 20rpx;
  padding: 10rpx;
}
/* end  */

.tianchong {
  width: 100%;
  height: 100rpx;
  border: 1px solid red;
}
/* end  */

/* 购物车底部  */
.cart-footer {
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #ccc;
  position:fixed;
  bottom: 0rpx;
  overflow: hidden;
  display: flex;
  white-space: nowrap;
  box-sizing: border-box;
  z-index: 999;
}
.jiesuan-box {
  width: 100%;
  height: 100%;
  position: relative;
}
.checkbox-group-box {
  position: absolute;
  width: 100rpx;
  height: 100%;
  /* border: 1px solid red;
  box-sizing: border-box; */
}
.checkbox-group-label {
  padding: 20rpx 24rpx;
}
.checkbox-icon-list {
  margin: 0;
}
.remove-cart-goods {
  width: 100rpx;
  height: 100%;
  position: absolute;
  left: 100rpx;
  /* border: 1px solid blue;
  box-sizing: border-box; */
}
.remove-goods-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 24rpx 18rpx;
}
.pay-for-box {
  width: 260rpx;
  height: 100%;
  position: absolute;
  right: 200rpx;
  font-size: 26rpx;
  color: #ccc;
  /* border: 1px solid gray;
  box-sizing: border-box; */
}
.pay-for-list {
  width: 100%;
  height: 50%;
  line-height: 50rpx;
  text-align: center;
}
.pay-for-btn {
  width: 200rpx;
  height: 100%;
  position: absolute;
  right: 0;
  background: red;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}
/* end  */